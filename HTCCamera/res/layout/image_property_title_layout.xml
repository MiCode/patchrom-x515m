            <TextView android:textSize="12.0sp" android:textColor="@color/settings_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/property_level_p2" android:layout_weight="0.0" />
            <TextView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0" />
            <TextView android:textSize="12.0sp" android:textColor="@color/settings_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/property_level_p1" android:layout_weight="0.0" />
            <TextView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0" />
            <TextView android:textSize="12.0sp" android:textColor="@color/settings_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/property_level_0" android:layout_weight="0.0" />
            <TextView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0" />
            <TextView android:textSize="12.0sp" android:textColor="@color/settings_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/property_level_m1" android:layout_weight="0.0" />
            <TextView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0" />
            <TextView android:textSize="12.0sp" android:textColor="@color/settings_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/property_level_m2" android:layout_weight="0.0" />
        </LinearLayout>
        <ImageView android:gravity="center" android:layout_width="@dimen/line_space" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/tumbler_base_height" android:src="@drawable/slider_level_line" android:scaleType="center" />
        <ImageView android:gravity="center" android:layout_width="@dimen/line_space" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/tumbler_base_height" android:src="@drawable/slider_level_line" />
        <ImageView android:gravity="center" android:layout_width="@dimen/line_space" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/tumbler_base_height" android:src="@drawable/slider_level_line" />
        <ImageView android:gravity="left" android:layout_width="@dimen/edge_space" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/tumbler_base_height" android:src="@drawable/slider_level_5lines" />
    </LinearLayout>
</RelativeLayout>
